<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartRate">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->

        <Button
            android:id="@+id/measure_heartrate_btn"
            android:layout_width="157dp"
            android:layout_height="68dp"
            android:layout_marginTop="48dp"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:text="Measure Heartrate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heartrate_label" />

        <Spinner
            android:id="@+id/heartrate_dates_spinner"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toEndOf="@+id/heartrate_label"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/heartrate_detailed_dates_spinner"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toEndOf="@+id/measure_heartrate_btn"
            app:layout_constraintTop_toBottomOf="@+id/heartrate_dates_spinner" />

        <TextView
            android:id="@+id/heartrate_label"
            android:layout_width="186dp"
            android:layout_height="34dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Heart Rate: "
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.anychart.AnyChartView
            android:id="@+id/heartrate_graph_view"
            android:layout_width="389dp"
            android:layout_height="485dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/measure_heartrate_btn"
            app:layout_constraintVertical_bias="0.51" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCustomExercise">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/custom_exercise_finished_btn"
            android:layout_width="136dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            android:text="Finished"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <EditText
            android:id="@+id/new_exercise_name_input"
            android:layout_width="224dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="New Exercise Name"
            android:inputType="textPersonName"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/category_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/new_exercise_name"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.397" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="395dp"
            android:layout_height="327dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            tools:layout_editor_absoluteX="8dp">

            <CheckBox
                android:id="@+id/weight_based_checkbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Weight Based"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/reps_based_checkbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Reps Based"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/time_based_checkbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Time Based"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/distance_based_checkbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Distance Based"
                android:textSize="30sp" />
        </RadioGroup>

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="228dp"
            android:layout_height="42dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/new_exercise_name2"
            android:layout_width="127dp"
            android:layout_height="45dp"
            android:layout_marginBottom="40dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toStartOf="@+id/category_spinner"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/new_exercise_name"
            android:layout_width="101dp"
            android:layout_height="41dp"
            android:layout_marginTop="34dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/new_exercise_name2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.045" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/tempo"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="24sp" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_custom_exercise_back_btn"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/back_arrow" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>